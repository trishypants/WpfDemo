<Page x:Class="LibraryCollection.Views.CollectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryCollection.Views"
      xmlns:vm="clr-namespace:LibraryCollection.ViewModels"
      xmlns:sf="http://schemas.syncfusion.com/wpf"
     
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CollectionPage">
    <Page.DataContext>
        <vm:CollectionViewModel />
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/GameCollection.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
            
    </Page.Resources>

    <Grid>
        <ScrollViewer>
            <ItemsControl
            ItemsSource="{Binding Games}"
            ItemTemplate="{DynamicResource ResourceKey=GameGridItem}"
            >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemHeight="250" ItemWidth="250" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
